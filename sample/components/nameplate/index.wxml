<view class="nameplate">
  <view class="row">
    <action bind:tap="onGitHubTap">
      <image mode="aspectFit" src="../../images/github.png" />
    </action>
    <action open-type="share">
      <image mode="aspectFit" src="../../images/share.png" />
    </action>
    <action bind:tap="onThemeChange" theme="{{ theme }}">
      <image mode="aspectFit" src="{{ theme === 'light' ? '../../images/dark.png' : '../../images/light.png' }}" />
    </action>
  </view>
</view>